<%= simple_form_for(crawl || Crawl.new) do |f| %>
  <div class="modal-body">
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :city %>
        <div class="form-row">
          <%= f.input :start_date, as: :string, wrapper_html: { :class => "inline_field_wrapper" } %>
          <%= f.input :end_date, as: :string, wrapper_html: { :class => "inline_field_wrapper" } %>
        </div>
        <%= f.input :description %>
      </div>
  </div>
  <div class="modal-footer">
    <button id="closeButton" type="button" class="btn btn-base btn-clear">Cancel</button>
    <%= f.button :submit, class: "btn btn-base btn-brand" %>
  </div>
<% end %>
